<div id="page" class="container">
	<div class="page-header-thing row">
		<div class="col col-md-12">
			<h1 id="website"><img src="http://i.imgur.com/nPmUFs6.png" alt="House logo" style="width:70px;height:60px;"> Housing Helper </font></h1>
		</div>		
	</div> <!-- page-header-thing -->
	<div class="page-controls row">
		<div id="controls" class="col col-md-12"> 
			<!-- contains slider + advanced -->
			<div id="slider" class="row">
				<div id="sidebarAndControlsButton" class="col col-md-7">
					<p> How far from campus would you like to be (in m)? </p>
					<input id="ex1" data-slider-id='ex1Slider' type="text" data-slider-min="0" data-slider-max="5000" data-slider-step="25" data-slider-value="2500"/>
				</div>
				<div class="col col-md-5">
					<a class="btn btn-md btn-primary pull-right" id="toggle">Advanced Options <i class="fa fa-caret-down"></i></a>
				</div>
			</div>
			{{> index_advancedControls}}
		</div> <!-- controls -->
	</div> <!-- page-controls -->
	<div class="main-content row">
		<div id="map" class="col-md-7 col"></div> <!-- map -->
		<div id="sidebar" class="col-md-5 col">

			<div data-bind="foreach: houseList" class="info container">
				<div class="row">
					<div class="col-md-2 col">
						<div id="thumb">
							<img data-bind="attr: { src: thumbnail }">
						</div> <!-- thumbnail -->
					</div> <!-- thumb cols -->
					<div class="col-md-3 col">
						<div id="desc">
							<h2 class="info-address" data-bind="text: title"></h2>
							<p class="distance">1300m from campus</p>
							<p class="shortDescription" data-bind="text: shortDescription"><p>
								<p class="price">
									<i class="fa fa-usd"></i><i class="fa fa-usd"></i><i class="fa fa-usd"></i>
									<span data-bind="text: price"></span>
									<span>Per month</span>
								</p>
							</div>
						</div>
					</div>
				</div> <!-- info container -->

			</div> <!-- sidebar -->
		</div> <!-- main-content -->
		<footer class="row">
			<div class="col col-md-12">
				<p>Made with &#9829; by Emma, Marissa, Brendan, and Kevin</p>
			</div>
		</footer>
	</div> <!-- page -->
	<!-- Google maps API -->
	<script src="/javascripts/application.js" type="text/javascript" charset="utf-8" async defer></script>
	<script src="https://cdn.jsdelivr.net/bootstrap-slider/9.5.3/bootstrap-slider.min.js" integrity="sha256-kPeeHHjF5O/nXuHuCjJCxIiOvdyW5UHeKzd2qon3oAw=" crossorigin="anonymous"></script>
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCdVkDZvDHp-2kThT7LYGGX3mCwE0gnF7E&callback=Application.initMap" async defer>
	</script>